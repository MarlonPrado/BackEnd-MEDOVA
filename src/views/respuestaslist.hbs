<body data-typography="poppins" data-theme-version="light" data-layout="vertical">
    <div id="main-wrapper">
        <!--********** navbar horizontal*************-->
        {{>navbarhor}}
        <!--********** navbar vertical*************-->
        {{> navbar}}
        <div class="content-body">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Usuarios</h5>
                    <br><br>
                    <div class="table-responsive">
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Enunciado</th>
                                    <th>Dificultad</th>
                                    <th>Opción</th>
                                    <th>Respuesta Correcta</th>
                                    <th>Retroalimentación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each pregunta}}
                                <tr>
                                    <td style="word-break: break-word; white-space: normal;">{{enunciado}}</td>
                                    <td style="text-center">{{dificultad}}</td>
                                    <td style="word-break: break-word; white-space: normal;">{{opcion}}</td>
                                    <td style="word-break: break-word; white-space: normal;">{{respuestaCorrecta}}</td>
                                    <td style="word-break: break-word; white-space: normal;">{{retroalimentacion}}</td>


                                    <td>
                                        <button id="deleteButton" class="btn btn-danger" data-toggle="modal"
                                            data-target="#deleteModal-{{idpregunta}}">Eliminar</button>
                                        <button id="updateButton" class="btn btn-primary" data-toggle="modal"
                                            data-target="#updateModal-{{idpregunta}}">Actualizar</button>

                                    </td>
                                </tr>

                                <!-- Modal -->

                                <!-- Ventana modal de eliminación -->
                                <div class="modal fade" id="deleteModal-{{idpregunta}}" tabindex="-1" role="dialog"
                                    aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel">Eliminar</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                ¿Estás seguro de que deseas eliminar este elemento?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Cancelar</button>

                                                <button id="confirmDeleteButton" type="button" class="btn btn-danger"
                                                    onclick="window.location.href = '/eliminarPregunta/{{idpregunta}}';">Eliminar</button>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Ventana modal de actualización -->
                                <div class="modal fade" id="updateModal-{{idpregunta}}" tabindex="-1" role="dialog"
                                    aria-labelledby="updateModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="updateModalLabel">Actualizar</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="modal-body">
                                                    <form action="/editarPregunta/{{idpregunta}}" method="POST">
                                                        <div class="form-group">
                                                            <label for="dificultad">Dificultad</label>
                                                            <input type="number" class="form-control" name="dificultad"
                                                                value="{{dificultad}}">
                                                        </div>
                                                        <label class="form-label" for="default-06">Selecciona un
                                                            tipo de Pregunta</label>
                                                        <div class="form-control-wrap ">
                                                            <div class="form-control-select">
                                                                <select class="form-control" id="default-06"
                                                                    name="tipoPregunta">
                                                                    <option value="SELECTUNIC">
                                                                        Seleccion unica
                                                                    </option>

                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="enunciado">Enunciado</label>
                                                            <input type="text" class="form-control" name="enunciado"
                                                                value="{{enunciado}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="opciona">Opción A</label>
                                                            <input type="text" class="form-control" name="opciona"
                                                                value="{{splitAndAccess opcion 0}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="opcionb">Opción B</label>
                                                            <input type="text" class="form-control" name="opcionb"
                                                                value="{{splitAndAccess opcion 1}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="opcionc">Opción C</label>
                                                            <input type="text" class="form-control" name="opcionc"
                                                                value="{{splitAndAccess opcion 2}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="opciond">Opción D</label>
                                                            <input type="text" class="form-control" name="opciond"
                                                                value="{{splitAndAccess opcion 3}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="respuestaCorrecta">Respuesta Correcta</label>
                                                            <select class="form-control" name="respuestaCorrecta">
                                                                <option  value=1>Opcion
                                                                                                    A
                                                                                                </option>
                                                                                                <option value=2>Opcion
                                                                                                    B
                                                                                                </option>
                                                                                                <option value=3>Opcion
                                                                                                    C
                                                                                                </option>
                                                                                                <option value=4>Opcion
                                                                                                    D
                                                                                                </option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="retroalimentacion">Retroalimentación</label>
                                                            <input type="text" class="form-control"
                                                                name="retroalimentacion" value="{{retroalimentacion}}">
                                                        </div>

                                                </div>

                                            </div>


                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Cancelar</button>
                                                <button id="confirmUpdateButton" type="submit"
                                                    class="btn btn-primary">Actualizar</button>
                                            </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </tbody>
                        </table>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>



